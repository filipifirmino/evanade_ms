<?xml version="1.0" encoding="utf-8" ?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat code coverage">
        <Configuration>
          <Format>cobertura</Format>
          <SkipAutoProps>true</SkipAutoProps>
          <IncludeTestAssembly>false</IncludeTestAssembly>
          <SingleHit>false</SingleHit>
          <UseSourceLink>true</UseSourceLink>
          <IncludeDirectory>../Sales.Application/**/*</IncludeDirectory>
          <IncludeDirectory>../Sales.Infrastructure/**/*</IncludeDirectory>
          <Exclude>[*.Tests]*</Exclude>
          <Exclude>[*.Test]*</Exclude>
          <Exclude>[xunit.*]*</Exclude>
          <Exclude>[AutoBogus]*</Exclude>
          <Exclude>[Moq]*</Exclude>
          <Exclude>[Microsoft.Extensions.*]*</Exclude>
          <Exclude>[System.*]*</Exclude>
          <Exclude>[FluentAssertions]*</Exclude>
          <Exclude>[AutoFixture]*</Exclude>
          <Exclude>[AutoFixture.Xunit2]*</Exclude>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
